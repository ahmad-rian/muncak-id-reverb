    <script>
        window.streamId = {{ $stream->id }};

        function streamViewer(streamId, guestUsername) {
            return {
                streamId: streamId,
                username: guestUsername,
                isLive: {{ $stream->isLive() ? 'true' : 'false' }},
                quality: '{{ $stream->quality }}',
                viewerCount: {{ $stream->viewer_count }},
                messages: [],
                messageInput: '',
                streamDuration: '',
                channel: null,

                init() {
                    this.loadChatHistory();
                    this.joinStream();
                    this.updateDuration();
                    setInterval(() => this.updateDuration(), 1000);
                },

                joinStream() {
                    // Join presence channel
                    this.channel = window.Echo.join(`stream.${this.streamId}`)
                        .here((users) => {
                            this.viewerCount = users.length;
                        })
                        .joining((user) => {
                            this.viewerCount++;
                        })
                        .leaving((user) => {
                            this.viewerCount--;
                        })
                        .listen('StreamStopped', (e) => {
                            this.isLive = false;
                            alert('Stream has ended');
                        })
                        .listen('ChatMessageSent', (e) => {
                            this.messages.push(e);
                            this.$nextTick(() => this.scrollChatToBottom());
                        })
                        .listen('ViewerCountUpdated', (e) => {
                            this.viewerCount = e.viewer_count;
                        });
                },

                async loadChatHistory() {
                    try {
                        const response = await axios.get(`/live-cam/${this.streamId}/chat`);
                        if (response.data.success) {
                            this.messages = response.data.messages;
                            this.$nextTick(() => this.scrollChatToBottom());
                        }
                    } catch (error) {
                        console.error('Failed to load chat history:', error);
                    }
                },

                async sendMessage() {
                    if (!this.messageInput.trim()) return;

                    try {
                        const response = await axios.post(`/live-cam/${this.streamId}/chat`, {
                            message: this.messageInput,
                            username: this.username
                        });

                        if (response.data.success) {
                            this.messages.push(response.data.message);
                            this.messageInput = '';
                            this.$nextTick(() => this.scrollChatToBottom());
                        }
                    } catch (error) {
                        console.error('Failed to send message:', error);
                        alert('Failed to send message');
                    }
                },

                scrollChatToBottom() {
                    const container = document.getElementById('chatContainer');
                    if (container) {
                        container.scrollTop = container.scrollHeight;
                    }
                },

                formatTime(timestamp) {
                    const date = new Date(timestamp);
                    return date.toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' });
                },

                updateDuration() {
                    const startedAt = new Date('{{ $stream->started_at }}');
                    const now = new Date();
                    const diff = Math.floor((now - startedAt) / 1000);

                    const hours = Math.floor(diff / 3600);
                    const minutes = Math.floor((diff % 3600) / 60);
                    const seconds = diff % 60;

                    if (hours > 0) {
                        this.streamDuration = `${hours}h ${minutes}m`;
                    } else if (minutes > 0) {
                        this.streamDuration = `${minutes}m ${seconds}s`;
                    } else {
                        this.streamDuration = `${seconds}s`;
                    }
                },

                changeQuality() {
                    console.log('Quality changed to:', this.quality);
                    // WebRTC quality change will be implemented here
                }
            }
        }
    </script>

